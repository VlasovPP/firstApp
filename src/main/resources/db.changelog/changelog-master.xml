<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-table-organization" author="Pavel">
        <createTable tableName="organization">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name_of_organization" type="varchar"/>
            <column name="physical_address" type="varchar"/>
            <column name="legal_address" type="varchar"/>
            <column name="name_of_director" type="varchar">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-table-division" author="Pavel">
        <createTable tableName="division">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="division_name" type="varchar"/>
            <column name="contact_details" type="varchar"/>
            <column name="manager_of_division" type="varchar"/>
            <column name="organization_id" type="varchar">
            </column>
        </createTable>
    <addForeignKeyConstraint baseTableName="division" baseColumnNames="organization_id"
                             constraintName="division_organization_id_organization_id"
                             referencedTableName="organization"
                             referencedColumnNames="id"
                             onUpdate="CASCADE"/>
    </changeSet>


    <changeSet id="create-table-employee" author="Pavel">
        <createTable tableName="employee">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="surname" type="varchar"/>
            <column name="name" type="varchar"/>
            <column name="middle_name" type="varchar"/>
            <column name="position" type="varchar"/>
            <column name="division_id" type="int"/>
            <column name="organization_id" type="int">
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="employee" baseColumnNames="division_id"
                                 constraintName="employee_division_id_division_id"
                                 referencedTableName="division"
                                 referencedColumnNames="id"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="employee" baseColumnNames="organization_id"
                                 constraintName="employee_organization_id_organization_id"
                                 referencedTableName="organization"
                                 referencedColumnNames="id"
                                 onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="create-table-assigment" author="Pavel">
        <createTable tableName="assigment">
            <column name="assigment_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="subject_of_assigment" type="varchar"/>
            <column name="executor_of_assigment_id" type="int"/>
            <column name="date_of_execution" type="varchar"/>
            <column name="sing_of_control" type="varchar"/>
            <column name="sing_of_execution" type="varchar"/>
            <column name="text_of_assigment" type="varchar">
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="assigment" baseColumnNames="executor_of_assigment_id"
                                 constraintName="assigment_executor_of_assigment_id_employee_id"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>